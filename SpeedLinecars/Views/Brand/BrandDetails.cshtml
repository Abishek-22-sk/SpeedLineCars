@model Brand

<div class="container">
	<div class="card">
		<div class="card-header text-center text-black text-uppercase">BrandDetails</div>

		<div class="row">
			<div class="col-md-8">
				<div class="row"></div>
				<div class="col-md-4"></div>
				<p class="text-uppercase card-text"><strong>Brand Id</strong></p>
			</div>
			<div class="col-md-8">
				<p class="card-text">:@Model.BrandId</p>
			</div>
			<div class="row">
				<div class="col-md-8">
					<div class="row"></div>
					<div class="col-md-4"></div>
					<p class="text-uppercase card-text"><strong>Brand Name</strong></p>
				</div>
				<div class="col-md-8">
					<p class="card-text">:@Model.BrandName</p>
				</div>
				<div class="row">
					<div class="col-md-8">
						<div class="row"></div>
						<div class="col-md-4"></div>
						<p class="text-uppercase card-text"><strong>Established Year</strong></p>
					</div>
					<div class="col-md-8">
						<p class="card-text">:@Model.EstablishedYear</p>
					</div>
					<div class="col-md-4"></div>
					<img src="~/@Model.BrandLogo" alt="@Model.BrandName Logo" class="img-fluid " width="100%"/>
				</div>
				<div class="row">
					<div class="col-md-12 text-center">
						<a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
					</div>
				</div>
			</div>
		</div>
